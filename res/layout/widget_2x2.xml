<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/widget"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:focusable="true"
                style="@style/WidgetBackground">
	<LinearLayout
			android:id="@+id/widget_tag_bar"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="1dip"
			android:orientation="horizontal">
		<ImageView
				android:id="@+id/widget_app_icon"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"/>
		<TextView
				android:id="@+id/widget_tag"
				android:layout_width="0dip"
				android:layout_weight="1.0"
				android:layout_height="wrap_content"
				android:paddingTop="3dip"
				android:text="tag"
				style="@style/Text.Widget.Tag"/>
		<ImageView
				android:id="@+id/widget_setup_icon"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"/>
	</LinearLayout>
	<LinearLayout
			android:id="@+id/widget_list"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/widget_tag_bar">
		<TextView
				android:id="@+id/widget_item1"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="item1"
				style="@style/Text.Widget.Item"/>
		<ImageView
				android:id="@+id/widget_item1_line"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:tint="@color/widget_sep"
				android:scaleType="fitXY"/>
		<TextView
				android:id="@+id/widget_item2"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="item2"
				style="@style/Text.Widget.Item"/>
		<ImageView
				android:id="@+id/widget_item2_line"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:tint="@color/widget_sep"
				android:scaleType="fitXY"/>
		<TextView
				android:id="@+id/widget_item3"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="item3"
				style="@style/Text.Widget.Item"/>
		<ImageView
				android:id="@+id/widget_item3_line"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:tint="@color/widget_sep"
				android:scaleType="fitXY"/>
		<TextView
				android:id="@+id/widget_item4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="item4"
				style="@style/Text.Widget.Item"/>
		<ImageView
				android:id="@+id/widget_item4_line"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:tint="@color/widget_sep"
				android:scaleType="fitXY"/>
		<TextView
				android:id="@+id/widget_item5"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="item5"
				style="@style/Text.Widget.Item"/>
		<ImageView
				android:id="@+id/widget_item5_line"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:tint="@color/widget_sep"
				android:scaleType="fitXY"/>
		<TextView
				android:id="@+id/widget_item6"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="item6"
				style="@style/Text.Widget.Item"/>
		<ImageView
				android:id="@+id/widget_item6_line"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:tint="@color/widget_sep"
				android:scaleType="fitXY"/>
		<TextView
				android:id="@+id/widget_item7"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="item7"
				style="@style/Text.Widget.Item"/>
		<ImageView
				android:id="@+id/widget_item7_line"
				android:layout_width="fill_parent"
				android:layout_height="1dip"
				android:tint="@color/widget_sep"
				android:scaleType="fitXY"/>
		<TextView
				android:id="@+id/widget_item8"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="item8"
				style="@style/Text.Widget.Item"/>
	</LinearLayout>
</RelativeLayout>